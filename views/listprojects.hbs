<div class="container" style="margin-top: 40px;">

    <h1 style="color: white;">List of the projects</h1>
    <hr>

    
      <div class="m-2">

        <button class="btn btn-light btn-outline-warning">
            <a href="/new">CREATE A PROJECT</a>

        </button>
    </div>
    <br>


    {{#each projects}}
    <div class="row alert-danger">
        <div class="col-md-6">
            <div class="card m-4" style="width: 18rem;">
                <img class="card-img-top" src="{{image}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-6  text-right">
            <br>
            <button class="btn btn-light"> <a href="/projects/{{_id}}">Edit it</a> </button> <br><br><br>

            <button class="btn btn-light"> <a href="/projects/{{_id}}/delete">Delete</a> </button>



        </div>
    </div>
    <br><br>
    {{/each}}

  

</div>