<div class="card w-50 shadow-lg " style="margin-left: auto; margin-right:auto ; opacity: 0.9;">
  <div class="card-body px-lg-5 my-2">
    <form class="form-signin text-center" action="/signin" method="POST">

      <h3 class="card-header  text-center py-5 shadow">
        <b>Log In to Dashboard</b>
      </h3>
      <br>


      <div class="form-group">
        <input type="email" name="email" aria-describedby="emailHelp" placeholder="Enter email"
          class="btn-block  border border-warning py-2">
      </div>

      <div class="form-group">
        <input type="password" name="password" placeholder="Password" class="btn-block  border border-warning py-2">
      </div>

      <button type="submit" class="btn btn-warning btn-rounded btn-block my-4  border border-danger">Signin</button>

    </form>
  </div>
</div>

