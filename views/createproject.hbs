<div class="text-center container" style="margin-top: 40px;">
  <form class="form-signin" action="/new" method="POST">

    <h1>Create a new project</h1>
    <div class="form-group">
      <input class="form-control" type="text" name="title" placeholder="Enter title">
    </div>

    <div class="form-group">
      <input class="form-control" type="text" name="image" placeholder="image">
    </div>

    <div class="form-group">
      <textarea class="form-control" name="description" placeholder="Description" rows="4"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>

  </form>
  </div>