<div class="col-md-9 container" style="color: white;margin-top: 50px;">
   {{#if success}}
    <p class="alert-success">Updated successfully</p>
    {{/if}} 
    <br>
 

 <form class="form-signin" action="/blogs/{{blogs._id}}" method="POST">

    <h1>Details of this project</h1>
    <div class="form-group">
      <input class="form-control" type="text" name="nametwo" placeholder="Enter title" value="{{blogs.nametwo}}">
    </div>

    <div class="form-group">
      <input class="form-control" type="text" name="imagetwo" placeholder="image" value="{{blogs.imagetwo}}">
    </div>

    <div class="form-group">
      <textarea class="form-control" name="paratwo" placeholder="Description" rows="4">{{blogs.paratwo}}</textarea>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>

  </form>
</div>